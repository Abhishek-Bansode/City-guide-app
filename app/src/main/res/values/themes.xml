<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CityGuideApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#F1CD2F</item>
        <item name="colorPrimaryVariant">#ffa600</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- Customize your theme here. -->
    <style name="navigationThemeNew">
        <!-- Navigation drawer text color when selected -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Navigation drawer icon color when selected -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Navigation drawer background color when selected -->
        <item name="colorControlHighlight">@color/colorAccent</item>
        <!-- Navigation drawer background color when not selected -->
        <item name="android:background">@color/white</item>
    </style>

</resources>