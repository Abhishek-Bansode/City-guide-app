<?xml version="1.0" encoding="utf-8"?>

<!-- res/drawable/card_gradient_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient stroke layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerColor="#FFA07A"
                android:endColor="#FF7F50"
                android:startColor="#FFC5A1"
                android:type="linear" />
            <corners android:radius="16dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- Background of the card -->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card1" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
